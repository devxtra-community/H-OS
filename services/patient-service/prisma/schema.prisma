// services/patient-service/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Patient {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  dob       DateTime
  gender    String
  phone     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([email])
  @@index([isActive])
  @@index([createdAt])
}